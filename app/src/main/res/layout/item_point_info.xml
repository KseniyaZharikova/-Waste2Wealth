<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Агропром Холдинг №1"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/loc_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/location"
        app:layout_constraintBottom_toBottomOf="@id/tvAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvAddress" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="Салиева 145/1 (Буденого)"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/loc_image"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <ImageView
        android:id="@+id/phone_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/iphone"
        app:layout_constraintBottom_toBottomOf="@id/tvPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPhone" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="0772 56 89 78"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/phone_image"
        app:layout_constraintTop_toBottomOf="@id/tvAddress" />

    <ImageView
        android:id="@+id/clock_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/clock"
        app:layout_constraintBottom_toBottomOf="@id/tvWorkTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvWorkTime" />

    <TextView
        android:id="@+id/tvWorkTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="9:00-18:00"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/clock_image"
        app:layout_constraintTop_toBottomOf="@id/tvPhone" />

    <ImageView
        android:id="@+id/wallet_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/wallet"
        app:layout_constraintBottom_toBottomOf="@id/tvPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPrice" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="1кг-9 сом"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/wallet_image"
        app:layout_constraintTop_toBottomOf="@id/tvWorkTime" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tvPrice" />


</android.support.constraint.ConstraintLayout>